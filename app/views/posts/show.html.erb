<%= link_to 'All posts', posts_path %>
<h1><%= @post.title %></h1>


<%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>

<p><%= @post.body %></p>

<p><%= link_to '<button type="button">Edit</button>'.html_safe, edit_post_path(@post) %></p>

<%= link_to '<button type="button">Back</button>'.html_safe, root_path %>
