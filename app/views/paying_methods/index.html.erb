<p id="notice"><%= notice %></p>

<h1>Paying Methods</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paying_methods.each do |paying_method| %>
      <tr>
        <td><%= paying_method.provider %></td>
        <td><%= link_to 'Show', paying_method %></td>
        <td><%= link_to 'Edit', edit_paying_method_path(paying_method) %></td>
        <td><%= link_to 'Destroy', paying_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

